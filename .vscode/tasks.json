{
    "version": "2.0.0",                    // tasks.json 的格式版本，固定写法
    "tasks": [                             // 任务列表，可以定义多个任务
        {
            "type": "shell",               // 任务类型：在终端/命令行中执行
            
            "label": "build",              // 任务名称（launch.json 通过这个名字找到它）
            
            "command": "g++",              // 要执行的命令（g++ 编译器）
            
            "args": [                      // 传给 g++ 的参数
                "-g",                      // 生成调试信息（debug 用）
                "${file}",                 // 当前打开的文件（如 demo.cpp）
                "-o",                      // output 输出，指定生成的文件名
                "${fileDirname}\\${fileBasenameNoExtension}.exe"  
                                           // 输出路径和文件名（如 demo.exe）
            ],
            
            "options": {                   
                "cwd": "${fileDirname}"    // 工作目录：当前文件所在的文件夹
            },
            
            "problemMatcher": ["$gcc"],    // 错误匹配器：识别 gcc/g++ 的报错格式
            
            "group": {                     
                "kind": "build",           // 任务分组：这是一个"构建"类任务
                "isDefault": true          // 设为默认，按 Ctrl+Shift+B 直接执行
            },
            
            "detail": "自定义编译任务"      // 任务描述（显示在选择列表中）
        }
    ]
}